	/* 轮播图 */
.page{
    background: #F7F7F7;
    border: 1px solid lightslategrey;

    margin-top: var(--status-bar-height);

}
.statusBar{

    display: block;
    position: fixed;
    height: var(--status-bar-height);
    width: 100%;
    top: 0;
    z-index: 1;
    background: #FFFFFF;

}
.page-block{
    background: #FFFFFF;
    marign-top: 20rpx;
}
.page .swiper{
		width: 750rpx;
		height: 440rpx;
}
.page .swiper image{
		width: 750rpx;
		height: 440rpx;
		display: inline-block;
}

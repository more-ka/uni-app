.page{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
form{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100vw;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.picture{
  margin-bottom: 100rpx;
  margin-top: 200rpx;
  -webkit-align-self: center;
          align-self: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.picture image{
  width: 160rpx;
  height: 160rpx;
  margin: auto;
}
.username,
.password{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  width: 70vw;
  border-bottom: 1px solid #999999;
  margin-top: 40rpx;
  height: 60rpx;
}
.username .text,
.password .text{
  font-size: 16px;
  -webkit-align-self: center;
          align-self: center;
  color: rgba(153,153,153);
  width: 100rpx;
}
.username input,
.password input{
  -webkit-align-self: center;
          align-self: center;
  font-size: 16px;
}
.username.active,
.password.active{
  border-bottom: 1px solid red;
}
